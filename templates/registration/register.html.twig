{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="block p-6 rounded-lg shadow-lg bg-white max-w-sm mx-auto mt-14 md:translate-y-1/3 md:mt-0">
        <h1 class="text-2xl mb-3 font-weight-normal text-center">S'enregistrer</h1>

            {{ form_start(registrationForm) }}

            <div class="form-group mb-6">
                {{ form_row(registrationForm.name, {attr: {'class': 'block w-full px-3 py-1.5
                        text-base font-normal
                        text-gray-700
                        bg-white bg-clip-padding
                        border border-solid border-gray-300
                        rounded
                        transition ease-in-out m-0
                        focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none'}, label: 'Nom'}) }}
            </div>

            <div class="form-group mb-6">
                {{ form_row(registrationForm.email, {attr: {'class': 'block w-full px-3 py-1.5
                        text-base font-normal
                        text-gray-700
                        bg-white bg-clip-padding
                        border border-solid border-gray-300
                        rounded
                        transition ease-in-out m-0
                        focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none'}}) }}
            </div>

            <div class="form-group mb-6">
                {{ form_row(registrationForm.plainPassword, {attr: {'class': 'block w-full px-3 py-1.5
                        text-base font-normal
                        text-gray-700
                        bg-white bg-clip-padding
                        border border-solid border-gray-300
                        rounded
                        transition ease-in-out m-0
                        focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none'}, label: 'Mot de passe'}) }}
            </div>

            {{ form_row(registrationForm.agreeTerms, {attr: {'class': 'mb-6 ml-2'}, label: 'Termes et condition d\'utilisation'}) }}

            {{ form_row(registrationForm.submit, {attr: {'class': 'w-full px-6 py-2.5 bg-blue-lagoon
                            text-white font-medium text-xs leading-tight uppercase
                            rounded
                            shadow-md
                            hover:bg-blue-700 hover:shadow-lg
                            focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0
                            active:bg-blue-800 active:shadow-lg
                            transition
                            duration-150
                            ease-in-out'}, label: 'S\'enregistrer'}) }}

            <p class="text-gray-800 mt-6 text-center">Déjà un compte ?
                <a href="{{ path('app_login') }}"
                   class="text-blue-lagoon hover:text-blue-700
                           focus:text-blue-700 transition duration-200 ease-in-out">Se connecter</a>
            </p>

            {{ form_end(registrationForm) }}
    </div>
{% endblock %}

