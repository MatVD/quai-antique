{% extends 'base.html.twig' %}

{% block title %}Quai Antique | Réservation{% endblock %}

{% block body %}
    <h1 class="text-4xl mt-14 text-center">Quai Antique</h1>
    <h2 class="text-4xl mt-9 font-weight-normal text-center underline">Réservation</h2>


{# ---------- formulaire de réservation de table ------------- #}
{# ----------------------------------------------------------- #}
    <div class="block p-2 rounded-lg shadow-lg bg-white max-w-xs mx-auto mt-14">
        <div class="my-4 flex justify-center items-center ">
            <i class="fa-solid fa-circle-info fa-xl mr-2 text-blue-lagoon"></i><p class="text-blue-lagoon" id="nbTablesFreeP"></p>
        </div>
        {{ form_start(form) }}
            {# ---------- Nom pour la réservation ------------- #}
            <div class="form-group mb-6">
                {{ form_row(form.reservation_name, {attr: {'class': 'block w-full px-3 py-1.5
                                text-base font-normal
                                text-gray-700
                                bg-white bg-clip-padding
                                border border-solid border-gray-300
                                rounded
                                transition ease-in-out
                                focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none'}, label: 'Nom'}) }}
            </div>

            {# ---------- Nombre de personnes ------------- #}
            <div class="form-group mb-6">
                {{ form_row(form.seats, {attr: {'class': 'block w-full px-3 py-1.5
                                text-base font-normal
                                text-gray-700
                                bg-white bg-clip-padding
                                border border-solid border-gray-300
                                rounded
                                transition ease-in-out
                                focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none'}, label: 'Nombre de couverts'}) }}
            </div>

            {# ---------- Mention des allergies ------------- #}
            <div class="form-group mb-6">
                {{ form_row(form.allergies, {attr: {'class': 'block w-full px-3 py-1.5
                                text-base font-normal
                                text-gray-700
                                bg-white bg-clip-padding
                                border border-solid border-gray-300
                                rounded
                                transition ease-in-out
                                focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none'}, label: 'Allergies'}) }}
            </div>


            <div class="form-group flex flex-wrap justify-between mb-10">
            {# ---------- Date de le réservation ------------- #}
                {{ form_row(form.date, {attr: {'class': 'block w-full px-3 py-1.5
                                text-base font-normal
                                text-gray-700
                                bg-white bg-clip-padding
                                border border-solid border-gray-300
                                rounded
                                transition ease-in-out
                                focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none'}}) }}

            {# ---------- Heure de réservation ------------- #}
                {{ form_row(form.arrival_time, {attr: {'class': 'block w-full px-3 py-1.5
                                text-base font-normal
                                text-gray-700
                                bg-white bg-clip-padding
                                border border-solid border-gray-300
                                rounded
                                transition ease-in-out
                                focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none'}, label: 'Heure d\'arrivée'}) }}
            </div>

            {# ---------- Soumission du formulaire ------------- #}
            <div class="form-group mb-4">
                {{ form_row(form.submit, {attr: {'class': 'w-full px-6 py-2.5 bg-blue-lagoon
                                text-white font-medium text-xs leading-tight uppercase
                                rounded
                                shadow-md
                                hover:shadow-lg
                                focus:shadow-lg focus:outline-none focus:ring-0
                                active:shadow-lg
                                transition
                                duration-150
                                ease-in-out'}, label: 'Soumettre la réservation'}) }}
            </div>

            {# ---------- Eventuel message d'erreur ------------- #}

        {{ form_end(form) }}
    </div>


{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('fetchNbFreeTables') }}
{% endblock %}